<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/title_checklists"
        android:textColor="@color/aviation_blue_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:tabTextColor="@color/gray_light"
        app:tabSelectedTextColor="@color/aviation_blue_primary"
        app:tabIndicatorColor="@color/aviation_blue_primary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_checklist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"/>

    <Button
        android:id="@+id/button_reset"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/btn_reset_checklist"
        android:textColor="@color/aviation_blue_primary"
        />

</LinearLayout>
